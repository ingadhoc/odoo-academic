<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="academic.login" inherit_id="web.login" name="Academic Login">
        <label for="login" position="replace">
            <label for="login" class="control-label">Usuario</label>
        </label>
    </template>

    <template id="academic_link" name="Link to backend" inherit_id="website.layout">
        <xpath expr="//li[@id='o_logout']" position="before">
            <li>
                <a href="/web" groups="academic.group_portal_student" role="menuitem">Academic</a>
            </li>
        </xpath>
    </template>

</odoo>
