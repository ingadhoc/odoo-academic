    <record id="academic_division_analysis_kanban" model="ir.ui.view" >
        <field name="name">academic.division_analysis.kanban</field>
        <field name="model">academic.division_analysis</field>
        <field name="arch" type="xml">
            <kanban class="oe_background_grey" create="false">
                <field name="name"/>
                <field name="subi_internal_lang_value"/>
                <field name="subi_internal_math_value"/>
                <field name="subi_external_lang_value"/>
                <field name="subi_external_math_value"/>
                <field name="subi_avg_hour_lang_value"/>
                <field name="subi_avg_hour_math_value"/>
                <field name="subi_avg_topics_lang_value"/>
                <field name="subi_avg_topics_math_value"/>
                <field name="subi_avg_spec_proj_lang_value"/>
                <field name="subi_avg_spec_proj_math_value"/>
                <field name="subi_avg_relevant_training_lang_value"/>
                <field name="subi_avg_relevant_training_math_value"/>
                <field name="subi_avg_teacher_interview_lang_value"/>
                <field name="subi_avg_teacher_interview_math_value"/>
                <field name="subi_timextopic_lang_value"/>
                <field name="subi_timextopic_math_value"/>
                <field name="subi_avg_parent_att_value"/>
                <field name="company"/>
                <field name="groups"/>
                <field name="periods"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click oe_kanban_crm_salesteams">
                            <div class="oe_kanban_content">
                                <h4 class="text-center" name="name"><strong><field name="name"/></strong></h4>
                                <div class="oe_items_list">
                                    Colegio: <field name="company"/>
                                    <br/>
                                    Grupos: <field name="groups"/>
                                    <br/>
                                    Períodos: <field name="periods"/>
                                </div>
                                <div class="oe_clear"></div>
                                <div class="oe_center">
                                </div>
                                <style type="text/css">
                                .tg  {border-collapse:collapse;border-spacing:0;}
                                .tg td{font-family:Arial, sans-serif;font-size:13px;padding:5px 5px;border-style:solid;border-width:1px;border-color:1px;overflow:hidden;word-break:normal;}
                                .tg th{font-family:Arial, sans-serif;font-size:13px;font-weight:normal;padding:10px 5px;border-style:solid;border-width:1px;overflow:hidden;word-break:normal;}
                                .tg .tg-wr85{font-weight:bold;background-color:#efefef;text-align:center}
                                .tg .tg-zcxc{font-weight:bold;background-color:#fffe81;text-align:center}
                                .tg .tg-5t2x{font-weight:bold;background-color:#fffc9e}
                                .tg .tg-s6z2{text-align:center}
                                .tg .tg-tfw5{background-color:#ffffc7;text-align:center}
                                .tg .tg-n5tn{font-weight:bold;background-color:#fffc9e;text-align:center}
                                .tg .tg-uqai{font-weight:bold;background-color:#ddffd4;text-align:center}
                                .tg .tg-hgcj{font-weight:bold;background-color:#d6e9fc;text-align:center}
                                </style>
                                <table class="tg">
                                      <tr>
                                        <th class="tg-wr85">Núcleos de observación</th>
                                        <th class="tg-wr85">Puntaje</th>
                                        <th class="tg-wr85" style="border-width:1px 3px 1px 3px;">Variable Seleccionada </th>
                                        <th class="tg-wr85" colspan="4">Indicadores </th>
                                      </tr>
                                      <tr>
                                        <td class="tg-uqai" rowspan="3">Desempeño de los alumnos (DA)</td>
                                        <td class="tg-uqai" style="border-widt:2px;">IDA</td>
                                        <td class="tg-uqai" rowspan="3" style="border-width:0px 3px 0px 3px;">Evaluación de rendimiento de alumnos en Lengua y Matemática</td>
                                        <td class="tg-uqai" colspan="2">Promedio Interno</td>
                                        <td class="tg-uqai" colspan="2">Promedio Externo</td>
                                      </tr>
                                      <tr>
                                        <td class="tg-s6z2" rowspan="2"><field name="student_perfomance"/></td>
                                        <td class="tg-uqai">Lengua</td>
                                        <td class="tg-uqai">Matemática</td>
                                        <td class="tg-uqai">Lengua</td>
                                        <td class="tg-uqai">Matemática</td>
                                      </tr>
                                      <tr>
                                        <td class="tg-s6z2"><field name="subi_internal_lang_value"/></td>
                                        <td class="tg-s6z2"><field name="subi_internal_math_value"/></td>
                                        <td class="tg-s6z2"><field name="subi_external_lang_value"/></td>
                                        <td class="tg-s6z2"><field name="subi_external_math_value"/></td>
                                      </tr>
                                      <tr>
                                        <td class="tg-n5tn" rowspan="6">Desempeño docente (DD)</td>
                                        <td class="tg-n5tn">IDD</td>
                                        <td class="tg-n5tn" rowspan="3" style="border-width:1px 3px 0px 3px;">Cumplimiento de tareas típicas</td>
                                        <td class="tg-n5tn" colspan="2">Horas de clase efectivamente dadas</td>
                                        <td class="tg-n5tn" colspan="2">Temas efectivamente dados</td>
                                      </tr>
                                      <tr>
                                        <td class="tg-s6z2" rowspan="5"><field name="teacher_perfomance"/></td>
                                        <td class="tg-n5tn">Lengua</td>
                                        <td class="tg-n5tn">Matemática</td>
                                        <td class="tg-n5tn">Lengua</td>
                                        <td class="tg-n5tn">Matemática</td>
                                      </tr>
                                      <tr>
                                        <td class="tg-s6z2"><field name="subi_avg_hour_lang_value"/></td>
                                        <td class="tg-s6z2"><field name="subi_avg_hour_math_value"/></td>
                                        <td class="tg-s6z2"><field name="subi_avg_topics_lang_value"/></td>
                                        <td class="tg-s6z2"><field name="subi_avg_topics_math_value"/></td>
                                      </tr>
                                      <tr>
                                        <td class="tg-n5tn" rowspan="3" style="border-width:1px 3px 0px 3px;">Participación institucional</td>
                                        <td class="tg-n5tn" colspan="2">Proyectos específicos</td>
                                        <td class="tg-n5tn" colspan="2">Capacitación pertinente</td>
                                      </tr>
                                      <tr>
                                        <td class="tg-n5tn">Lengua</td>
                                        <td class="tg-n5tn">Matemática</td>
                                        <td class="tg-n5tn">Lengua</td>
                                        <td class="tg-n5tn">Matemática</td>
                                      </tr>
                                      <tr>

                                        <td class="tg-s6z2"><field name="subi_avg_spec_proj_lang_value"/></td>
                                        <td class="tg-s6z2"><field name="subi_avg_spec_proj_math_value"/></td>
                                        <td class="tg-s6z2"><field name="subi_avg_relevant_training_lang_value"/></td>
                                        <td class="tg-s6z2"><field name="subi_avg_relevant_training_math_value"/></td>
                                      </tr>
                                       <tr>
                                        <td class="tg-hgcj" rowspan="5">Agenda del Director (AD)</td>
                                        <td class="tg-hgcj">IAD</td>
                                        <td class="tg-hgcj" rowspan="3" style="border-width:1px 3px 0px 3px;">Entrevistas formales con los docentes</td>
                                        <td class="tg-hgcj" colspan="2">Entrevistas formales</td>
                                        <td class="tg-hgcj" colspan="2">Tiempo asignado a temas pedagógicos u organizativos</td>
                                      </tr>
                                      <tr>
                                        <td class="tg-s6z2" rowspan="4"><field name="administrator_perfomance"/></td>
                                        <td class="tg-hgcj">Lengua</td>
                                        <td class="tg-hgcj">Matemática</td>
                                        <td class="tg-hgcj">Lengua</td>
                                        <td class="tg-hgcj">Matemática</td>
                                      </tr>
                                      <tr>
                                        <td class="tg-s6z2"><field name="subi_avg_teacher_interview_lang_value"/></td>
                                        <td class="tg-s6z2"><field name="subi_avg_teacher_interview_math_value"/></td>
                                        <td class="tg-s6z2"><field name="subi_timextopic_lang_value"/></td>
                                        <td class="tg-s6z2"><field name="subi_timextopic_math_value"/></td>
                                      </tr>
                                      <tr>
                                        <td class="tg-hgcj" rowspan="2" style="border-width:1px 3px 1px 3px;">Entrevistas formales con padres</td>
                                        <td class="tg-hgcj" colspan="4">Padres entrevistados</td>
                                      </tr>
                                      <tr>
                                        <td class="tg-s6z2" colspan="4"><field name="subi_avg_parent_att_value"/></td>
                                      </tr>
                                </table>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_academic_division_analysis_conf" model="ir.actions.act_window">
        <field name="name">Division Analysis Configuration</field>
        <field name="res_model">academic.division_analysis</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref=""/>
        <field name="view_id" ref=""/>
        <field name="context">{}</field>
        <field name="domain"></field>
    </record>

    <menuitem id="menu_academic_division_analysis_conf" name="Indicator Analysis Configuration" parent="base.menu_reporting_config" sequence="20" action="action_academic_division_analysis_conf"/>

</odoo>
