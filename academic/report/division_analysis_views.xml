<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="academic_division_analysis_tree" model="ir.ui.view">
        <field eval="1" name="priority"/>
        <field name="name">academic.division_analysis.tree</field>
        <field name="model">academic.division_analysis</field>
        <field name="arch" type="xml">
            <tree string="Division Analysis" create="false">
                <field name="name"/>
                <field name="company"/>
                <field name="groups"/>
                <field name="periods"/>
                <field name="consider_disabled_person"/>
                <field name="include_diagnosis_eval"/>
                <field name="student_perfomance"/>
                <field name="teacher_perfomance"/>
                <field name="administrator_perfomance"/>
                <field name="subi_internal_lang_value"/>
                <field name="subi_internal_math_value"/>
                <field name="subi_external_lang_value"/>
                <field name="subi_external_math_value"/>
                <field name="subi_avg_hour_lang_value"/>
                <field name="subi_avg_hour_math_value"/>
                <field name="subi_avg_topics_lang_value"/>
                <field name="subi_avg_topics_math_value"/>
                <field name="subi_avg_spec_proj_lang_value"/>
                <field name="subi_avg_spec_proj_math_value"/>
                <field name="subi_avg_relevant_training_lang_value"/>
                <field name="subi_avg_relevant_training_math_value"/>
                <field name="subi_avg_teacher_interview_lang_value"/>
                <field name="subi_avg_teacher_interview_math_value"/>
                <field name="subi_timextopic_lang_value"/>
                <field name="subi_timextopic_math_value"/>
                <field name="subi_avg_parent_att_value"/>
                <!-- <field name="group_id"/> -->
            </tree>
        </field>
    </record>

    <record id="academic_division_analysis_form" model="ir.ui.view">
        <field name="name">academic.division_analysis.form</field>
        <field name="model">academic.division_analysis</field>
        <field name="arch" type="xml">
            <form string="Division Analysis" create="false">
                <group>
                    <group>
                        <field name="name"/>
                    </group>
                    <group>
                        <!-- <field name="group_id"/> -->
                    </group>
                    <group col="8" colspan="2" string="Indicador Interno Lengua">
                        <field name="subi_internal_lang_ind_id" string="Indicator"/>
                        <field name="subi_internal_lang_sub_id" string="Subject"/>
                        <field name="subi_internal_lang_weight" string="Weight"/>
                        <!-- <field name="subi_internal_lang_value" string="Value"/> -->
                    </group>
                    <group col="8" colspan="2" string="Indicador Interno Matemática">
                        <field name="subi_internal_math_ind_id" string="Indicator"/>
                        <field name="subi_internal_math_sub_id" string="Subject"/>
                        <field name="subi_internal_math_weight" string="Weight"/>
                        <!-- <field name="subi_internal_math_value" string="Value"/> -->
                    </group>
                    <group col="8" colspan="2" string="Indicador Externo Lengua">
                        <field name="subi_external_lang_ind_id" string="Indicator"/>
                        <field name="subi_external_lang_sub_id" string="Subject"/>
                        <field name="subi_external_lang_weight" string="Weight"/>
                        <!-- <field name="subi_external_lang_value" string="Value"/> -->
                    </group>
                    <group col="8" colspan="2" string="Indicador Interno Matemática">
                        <field name="subi_external_math_ind_id" string="Indicator"/>
                        <field name="subi_external_math_sub_id" string="Subject"/>
                        <field name="subi_external_math_weight" string="Weight"/>
                        <!-- <field name="subi_external_math_value" string="Value"/> -->
                    </group>
                    <group col="8" colspan="2" string="Porcentaje de horas dadas Lengua">
                        <field name="subi_avg_hour_lang_ind_id" string="Indicator"/>
                        <field name="subi_avg_hour_lang_sub_id" string="Subject"/>
                        <field name="subi_avg_hour_lang_weight" string="Weight"/>
                        <!-- <field name="subi_avg_hour_lang_value" string="Value"/> -->
                    </group>
                    <group col="8" colspan="2" string="Porcentaje de horas dadas Matematica">
                        <field name="subi_avg_hour_math_ind_id" string="Indicator"/>
                        <field name="subi_avg_hour_math_sub_id" string="Subject"/>
                        <field name="subi_avg_hour_math_weight" string="Weight"/>
                        <!-- <field name="subi_avg_hour_math_value" string="Value"/> -->
                    </group>
                    <group col="8" colspan="2" string="Porcentaje de temas desarrollados Lengua">
                        <field name="subi_avg_topics_lang_ind_id" string="Indicator"/>
                        <field name="subi_avg_topics_lang_sub_id" string="Subject"/>
                        <field name="subi_avg_topics_lang_weight" string="Weight"/>
                        <!-- <field name="subi_avg_topics_lang_value" string="Value"/> -->
                    </group>
                    <group col="8" colspan="2" string="Porcentaje de temas desarrollados Matematica">
                        <field name="subi_avg_topics_math_ind_id" string="Indicator"/>
                        <field name="subi_avg_topics_math_sub_id" string="Subject"/>
                        <field name="subi_avg_topics_math_weight" string="Weight"/>
                        <!-- <field name="subi_avg_topics_math_value" string="Value"/> -->
                    </group>
                    <group col="8" colspan="2" string="Porcentaje de proyectos específicos Lengua">
                        <field name="subi_avg_spec_proj_lang_ind_id" string="Indicator"/>
                        <field name="subi_avg_spec_proj_lang_sub_id" string="Subject"/>
                        <field name="subi_avg_spec_proj_lang_weight" string="Weight"/>
                        <!-- <field name="subi_avg_spec_proj_lang_value" string="Value"/> -->
                    </group>
                    <group col="8" colspan="2" string="Porcentaje de proyectos específicos Matematica">
                        <field name="subi_avg_spec_proj_math_ind_id" string="Indicator"/>
                        <field name="subi_avg_spec_proj_math_sub_id" string="Subject"/>
                        <field name="subi_avg_spec_proj_math_weight" string="Weight"/>
                        <!-- <field name="subi_avg_spec_proj_math_value" string="Value"/> -->
                    </group>
                    <group col="8" colspan="2" string="Porcentaje de capacitación pertinente Lengua">
                        <field name="subi_avg_relevant_training_lang_ind_id" string="Indicator"/>
                        <field name="subi_avg_relevant_training_lang_sub_id" string="Subject"/>
                        <field name="subi_avg_relevant_training_lang_weight" string="Weight"/>
                        <!-- <field name="subi_avg_relevant_training_lang_value" string="Value"/> -->
                    </group>
                    <group col="8" colspan="2" string="Porcentaje de capacitación pertinente Matematica">
                        <field name="subi_avg_relevant_training_math_ind_id" string="Indicator"/>
                        <field name="subi_avg_relevant_training_math_sub_id" string="Subject"/>
                        <field name="subi_avg_relevant_training_math_weight" string="Weight"/>
                        <!-- <field name="subi_avg_relevant_training_math_value" string="Value"/> -->
                    </group>

                    <group col="8" colspan="2" string="Porcentaje de entrevitas con docentes - Lengua">
                        <field name="subi_avg_teacher_interview_lang_ind_id" string="Indicator"/>
                        <field name="subi_avg_teacher_interview_lang_sub_id" string="Subject"/>
                        <field name="subi_avg_teacher_interview_lang_weight" string="Weight"/>
                    </group>
                    <group col="8" colspan="2" string="Porcentaje de entrevitas con docentes - Matemática">
                        <field name="subi_avg_teacher_interview_math_ind_id" string="Indicator"/>
                        <field name="subi_avg_teacher_interview_math_sub_id" string="Subject"/>
                        <field name="subi_avg_teacher_interview_math_weight" string="Weight"/>
                    </group>

                    <group col="8" colspan="2" string="Porcentaje de tiempo por tema Lengua">
                        <field name="subi_timextopic_lang_ind_id" string="Indicator"/>
                        <field name="subi_timextopic_lang_sub_id" string="Subject"/>
                        <field name="subi_timextopic_lang_weight" string="Weight"/>
                        <!-- <field name="subi_timextopic_lang_value" string="Value"/> -->
                    </group>
                    <group col="8" colspan="2" string="Porcentaje de tiempo por tema Matemática">
                        <field name="subi_timextopic_math_ind_id" string="Indicator"/>
                        <field name="subi_timextopic_math_sub_id" string="Subject"/>
                        <field name="subi_timextopic_math_weight" string="Weight"/>
                        <!-- <field name="subi_timextopic_math_value" string="Value"/> -->
                    </group>

                    <group col="8" colspan="2" string="Porcentaje de asistencia padre o mandre">
                        <field name="subi_avg_parent_att_ind_id" string="Indicator"/>
                        <field name="subi_avg_parent_att_sub_id" string="Subject"/>
                        <field name="subi_avg_parent_att_weight" string="Weight"/>
                        <!-- <field name="subi_avg_parent_att_value" string="Value"/> -->
                    </group>
                </group>

            </form>
        </field>
    </record>

