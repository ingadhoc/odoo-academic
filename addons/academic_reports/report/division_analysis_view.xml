                    </group>

                    <group col="8" colspan="2" string="Porcentaje de entrevitas con alumnos">
                        <field name="subi_avg_student_interview_ind_id" string="Indicator"/>
                        <field name="subi_avg_student_interview_sub_id" string="Subject"/>
                        <field name="subi_avg_student_interview_weight" string="Weight"/>
