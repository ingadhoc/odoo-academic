                    </group>
                    <group col="8" colspan="2" string="Porcentaje de temas desarrollados Matematica">
                        <field name="subi_avg_topics_math_ind_id" string="Indicator"/>
                        <field name="subi_avg_topics_math_sub_id" string="Subject"/>
                        <field name="subi_avg_topics_math_weight" string="Weight"/>
