                    </group>  

                    <group col="8" colspan="2" string="Porcentaje de asistencia matrimonio">
                        <field name="subi_avg_marriage_att_ind_id" string="Indicator"/>
                        <field name="subi_avg_marriage_att_sub_id" string="Subject"/>
                        <field name="subi_avg_marriage_att_weight" string="Weight"/>
                        <!-- <field name="subi_avg_marriage_att_value" string="Value"/> -->
                    </group>    
                    <group col="8" colspan="2" string="Porcentaje de asistencia padre o mandre">
                        <field name="subi_avg_parent_att_ind_id" string="Indicator"/>
                        <field name="subi_avg_parent_att_sub_id" string="Subject"/>
                        <field name="subi_avg_parent_att_weight" string="Weight"/>
