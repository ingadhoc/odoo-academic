                    <group col="8" colspan="2" string="Porcentaje de proyectos específicos Matematica">
                        <field name="subi_avg_spec_proj_math_ind_id" string="Indicator"/>
                        <field name="subi_avg_spec_proj_math_sub_id" string="Subject"/>
