    <td class="tg-uqai" rowspan="3">Desempeño de los alumnos (DA)</td>
    <td class="tg-uqai">IDA</td>
    <td class="tg-uqai" rowspan="2"> </td>
    <td class="tg-uqai" colspan="2">Interno</td>
    <td class="tg-uqai" colspan="2">Externo</td>
  </tr>
  <tr>
    <td class="tg-s6z2" rowspan="2"><field name="student_perfomance"/></td>
    <td class="tg-uqai">Lengua</td>
    <td class="tg-uqai">Matemáticas</td>
    <td class="tg-uqai">Lengua</td>
    <td class="tg-uqai">Matemáticas</td>
  </tr>
