                    </group>

                    <group col="8" colspan="2" string="Porcentaje de tiempo por tema Lengua - Pedagógicos">
                        <field name="subi_timextopic_ped_lang_ind_id" string="Indicator"/>
                        <field name="subi_timextopic_ped_lang_sub_id" string="Subject"/>
                        <field name="subi_timextopic_ped_lang_weight" string="Weight"/>
                        <!-- <field name="subi_timextopic_ped_lang_value" string="Value"/> -->
                    </group>
                    <group col="8" colspan="2" string="Porcentaje de tiempo por tema Matemática - Pedagógicos">
                        <field name="subi_timextopic_ped_math_ind_id" string="Indicator"/>
                        <field name="subi_timextopic_ped_math_sub_id" string="Subject"/>
                        <field name="subi_timextopic_ped_math_weight" string="Weight"/>
                        <!-- <field name="subi_timextopic_ped_math_value" string="Value"/> -->
                    </group>
                    <group col="8" colspan="2" string="Porcentaje de tiempo por tema Lengua - Organizativos">
                        <field name="subi_timextopic_org_lang_ind_id" string="Indicator"/>
                        <field name="subi_timextopic_org_lang_sub_id" string="Subject"/>
                        <field name="subi_timextopic_org_lang_weight" string="Weight"/>
                        <!-- <field name="subi_timextopic_org_lang_value" string="Value"/> -->
                    </group>
                    <group col="8" colspan="2" string="Porcentaje de tiempo por tema Matemática - Organizativos">
                        <field name="subi_timextopic_org_math_ind_id" string="Indicator"/>
                        <field name="subi_timextopic_org_math_sub_id" string="Subject"/>
                        <field name="subi_timextopic_org_math_weight" string="Weight"/>
